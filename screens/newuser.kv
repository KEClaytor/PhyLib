LibraryScreen:
    name: 'mainlogin'

    Label:
        text: 'Welcome to the Physics Library System'
        size_hint_y: None
        height: '16dp'

    Label:
        text: "I'll need a little bit of data to get going"
        size_hint_y: None
        height: '16dp'

    GridLayout:
        cols: 2
        spacing: '8dp'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'Name'

        TabTextInput:
            id: newuser_name_text
            size_hint_y: None
            height: '32dp'
            text: ''
            focus: True
            next: newuser_netid_text

        Label:
            text: 'NetID'

        TabTextInput:
            id: newuser_netid_text
            size_hint_y: None
            height: '32dp'
            text: ''
            next: newuser_name_text

        Label:
            text: 'Status:'

        TextInput:
            id: newuser_status_text
            readonly: True
            size_hint_y: None
            height: '32dp'
            text: 'Pending...'

    Button:
        id: create_button
        size_hint_y: None
        height: '48dp'
        text: 'Create User'
        on_release: app.add_user(True)

    Button:
        id: cancel_button
        size_hint_y: None
        height: '48dp'
        text: 'Cancel and Return'
        on_release: app.add_user(False)
