LibraryScreen:
    name: 'newuser'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 1)

        BoxLayout:
            size_hint: (.6, 1)
            orientation: 'vertical'

            ScrollView:
                size_hint: (1,None)
                id: newuser_list_sv

        BoxLayout:
            size_hint: (.4, 1)
            orientation: 'vertical'

            GridLayout:
                cols: 2
                spacing: '8dp'
                size_hint_y: None
                height: self.minimum_height

                Label:
                    text: 'Name'

                TabTextInput:
                    id: newuser_name_text
                    size_hint_y: None
                    height: '32dp'
                    text: ''
                    focus: True
                    next: newuser_netid_text

                Label:
                    text: 'NetID'

                TabTextInput:
                    id: newuser_netid_text
                    size_hint_y: None
                    height: '32dp'
                    text: ''
                    next: newuser_name_text

                Label:
                    text: 'Status:'

                TextInput:
                    id: newuser_status_text
                    readonly: True
                    size_hint_y: None
                    height: '32dp'
                    text: 'Pending...'

            Button:
                id: create_button
                size_hint_y: None
                height: '48dp'
                text: 'Create User'
                on_release: app.add_user(True)

            Button:
                id: cancel_button
                size_hint_y: None
                height: '48dp'
                text: 'Cancel and Return'
                on_release: app.add_user(False)
