LibraryScreen:
    name: 'mainlogin'

    Label:
        text: 'Login to begin'

    Label:
        text: ''

    GridLayout:
        cols: 2
        spacing: '8dp'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'Username'

        TabTextInput:
            id: username_text
            size_hint_y: None
            height: '32dp'
            text: ''
            focus: True
            next: password_text

        Label:
            text: 'Password'

        TabTextInput:
            id: password_text
            size_hint_y: None
            height: '32dp'
            text: ''
            password: True
            next: username_text

    Button:
        id: button_login
        size_hint_y: None
        height: '48dp'
        text: 'Login'
        on_release: app.login()
