LibraryScreen:
    name: 'newbook'

    Label:
        text: 'Welcome to the Physics Library System'
        height: '16dp'
        size_hint_y: None

    Label:
        text: 'Enter the information below to add a book to the sytem.'
        height: '16dp'
        size_hint_y: None

    GridLayout:
        cols: 2
        spacing: '8dp'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'Title'

        TabTextInput:
            id: newbook_title_text
            size_hint_y: None
            height: '32dp'
            text: ''
            focus: True
            next: newbook_author_text

        Label:
            text: 'Author'

        TabTextInput:
            id: newbook_author_text
            size_hint_y: None
            height: '32dp'
            text: ''
            next: newbook_year_text

        Label:
            text: 'Year'

        TabTextInput:
            id: newbook_year_text
            size_hint_y: None
            height: '32dp'
            text: ''
            next: newbook_copy_text

        Label:
            text: 'Copy'

        TabTextInput:
            id: newbook_copy_text
            size_hint_y: None
            height: '32dp'
            text: '1'
            next: newbook_title_text

        Label:
            text: 'RFID Code'

        TextInput:
            id: newbook_rfid_text
            readonly: True
            size_hint_y: None
            height: '32dp'
            text: "Awaiting 'Create'..."

        Label:
            text: 'Status:'

        TextInput:
            id: newbook_status_text
            readonly: True
            size_hint_y: None
            height: '32dp'
            text: 'Pending...'

    Button:
        id: create_button
        size_hint_y: None
        height: '48dp'
        text: 'Add Book'
        on_release: app.add_book(True)

    Button:
        id: cancel_button
        size_hint_y: None
        height: '48dp'
        text: 'Cancel and Return'
        on_release: app.add_book(False)
